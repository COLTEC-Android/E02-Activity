<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufmg.coltec.exe1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acesso ao Usuário"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/lbl_welcome"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_welcome"
        android:inputType="text"
        android:hint="Login"
        android:id="@+id/lbl_text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_text"
        android:inputType="textPassword"
        android:hint="Password"
        android:id="@+id/password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificação"
        android:id="@+id/btn_login"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
